@page
@model CreateRoomModel
@{
    ViewData["Title"] = "Create Room Policy";
}
<h1>@ViewData["Title"]</h1>

<form method="post">
    <div class="form-group">
        <label for="roomName">Room Name:</label>
        <input type="text" class="form-control" style="width: 200px" id="roomName" asp-for="room.RoomName">
    </div>
    <div class="form-group">
        <label for="capacity">Capacity:</label>
        <input type="number" class="form-control" style="width: 200px" id="capacity" asp-for="room.Capacity">
    </div>
        <button type="submit" class="btn btn-primary style="margin-top: 10px">Submit</button>
    </div>
    
</form>