@page
@model ShowRoomsModel
@{
    ViewData["Title"] = "Room List";
}

<h1>@ViewData["Title"]</h1>

<table class="table">
    <thead>
        <tr>
            <th>Room ID</th>
            <th>Room Name</th>
            <th>Capacity</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var room in Model.Rooms)
        {
            <tr>
                <td>@room.Id</td>
                <td>@room.RoomName</td>
                <td>@room.Capacity</td>
            </tr>
        }
    </tbody>
</table>
