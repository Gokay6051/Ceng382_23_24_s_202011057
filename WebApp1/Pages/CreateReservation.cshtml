@page
@using WebApp1.Pages
@model CreateReservationModel
@{
    ViewData["Title"] = "Create Reservation";
}

<h2>Create Reservation</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="Reservation.RoomId" class="control-label">Room</label>
        <select asp-for="Reservation.RoomId" class="form-control" asp-items="Model.Rooms">
            <option value="">Select a room</option>
        </select>
        <span asp-validation-for="Reservation.RoomId" class="text-danger"></span>
        <small id="RoomCapacityHint" class="form-text text-muted"></small>
    </div>
    <div class="form-group">
        <label asp-for="Reservation.DateTime" class="control-label">Date and Time</label>
        <input asp-for="Reservation.DateTime" class="form-control" type="datetime-local" />
        <span asp-validation-for="Reservation.DateTime" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PersonCount" class="control-label">Person Count</label>
        <input asp-for="PersonCount" class="form-control" type="number" />
        <span asp-validation-for="PersonCount" class="text-danger"></span>
    </div>
    <br>
    <button type="submit" class="btn btn-primary">Create</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        const roomsData = @Html.Raw(Json.Serialize(Model.RoomsList));
        function updateRoomCapacity() {
            const roomId = document.getElementById('Reservation_RoomId').value;
            const room = roomsData.find(r => r.Id == roomId);
            const hint = room ? `Capacity: ${room.Capacity}` : '';
            document.getElementById('RoomCapacityHint').innerText = hint;
        }

        document.getElementById('Reservation_RoomId').addEventListener('change', updateRoomCapacity);
        updateRoomCapacity();
    </script>
}
