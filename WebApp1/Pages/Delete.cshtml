@page "{id:int}"
@model DeleteModel
@{
    ViewData["Title"] = "Delete Reserrvation";
}

<h1>Delete Reservation</h1>

<h3>Are you sure you want to delete this Reservation?</h3>

<div>
    <h4>@Model.Reservation.Room.RoomName</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Room Name
        </dt>
        <dd class="col-sm-10">
           @Model.Reservation.Room.RoomName
        </dd>
        <dt class="col-sm-2">
            Capacity
        </dt>
        <dd class="col-sm-10">
            @Model.Reservation.Room.Capacity
        </dd>
        <dt class="col-sm-2">
            Date Time
        </dt>
        <dd class="col-sm-10">
            @Model.Reservation.DateTime
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Reservation.Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>